<ul class="errors">
    {% for error in errors %}
        <li>{{ error }}</li>
    {% endfor %}
</ul>

<form action="" method="POST" enctype="multipart/form-data">

    <label for="number">Num√©ro</label>
    <input type="number" id="number" name="number" value="{{ newspaper.number }}" required>

    <label for="date">Date</label>
    <input type="text" id="date" name="date" value="{{ newspaper.date }}" required>

    <label for="cover">Couverture</label>
    <input type="file" id="cover" name="cover" value="{{ newspaper.cover }}">

    <label for="link">Lien</label>
    <input type="text" id="link" name="link" value="{{ newspaper.link }}" required>

    <button>{{ buttonName|default('Ajouter') }}</button>
</form>