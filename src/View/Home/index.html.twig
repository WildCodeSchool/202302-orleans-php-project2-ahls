{% extends 'layout.html.twig' %}

{% block content %}

	<section>
		<article>
				<div class="magazine">
					<h2>L'INDIEN</h2>
					<img src="assets/images/vector.png" class="decoration">
					{% for copy in magazines %}
						<div class="cover">
							<h3>{{ copy.month }}
								-
								{{ copy.year }}</h3>
							<a href="">
								<img src="/assets/images/l-indien-mars-23.webp" {{ copy.cover }}>
								<p class="number">{{ copy.number }}
									<b>Lire la suite</b>
								</p>
							</div>
						</div>
					</a>
				{% endfor %}
				<a class="show_more" href="">Consulter les anciens numéros ➔</a>
			</article>
		</section>

	{% endblock %}
